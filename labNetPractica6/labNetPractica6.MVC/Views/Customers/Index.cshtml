@model List<labNetPractica6.MVC.Models.CustomersView>

@{
    ViewBag.Title = "Customer Page";
}

<h1>Tabla de Clientes</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Company Name</th> 
            <th scope="col">Contact</th>
            <th scope="col">Title</th>
            <th scope="col">Opciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <th scope="row">@customer.Id</th>
                <td>@customer.companyName</td>
                <td>@customer.contactName</td>
                <td>@customer.contactTitle</td>
                <td>
                    @Html.ActionLink("Agregar", "Insert", new { id = customer.Id }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Update", new { id = customer.Id }, new { @class = "btn btn-info" })
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = customer.Id }, new { @class = "btn btn-danger",
                        onclick = "return confirm('¿Está seguro que desea eliminar este cliente?')" }))
                </td>
            </tr>
        }
    </tbody>
</table>

